#content
  .separator.bottom
  .heading-buttons
    %h3
      Add New Friends
      %span | according to User's ID
    .clearfix
  .separator.bottom
  
  .innerLR
    = form_for :user, :url => {:controller => "friends", :action => "create", :method => "post" } do |f|

      .widget.widget-tabs
        .widget-body
          .tab-content
            #productDescriptionTab.tab-pane.active
              .row-fluid
                .span3
                  %strong Enter ID
                  %p.muted ID of the User
                .span9
                  %label{:for => "inputTitle"} ID
                  = f.text_field :id, class: "span6"  ,placeholder: "Enter ID ..."
                  .separator
              %hr.separator.bottom/

              .row-fluid
                .span3
                  %strong Enter Name of the Friend
                  %p.muted Name of the Friend
                .span9
                  %label{:for => "inputTitle"} Name
                  = f.text_field :friend_name, class: "span6"  ,placeholder: "Enter Friend Name ..."
                  .separator
              %hr.separator.bottom/
              
              .row-fluid
                .span3
                  %strong Enter mobile number
                  %p.muted Send SMS to the user with the verification code.
                .span9
                  %label{:for => "inputTitle"} Contact Number
                  = f.text_field :contact_number, class: "span6"  ,placeholder: "Enter Contact Number ..."

              %br
        .heading-buttons
          .buttons.pull-right{:style => "margin: 0;"}
            = f.submit "Save", :class => "btn btn-primary btn-icon glyphicons ok_2"
            
