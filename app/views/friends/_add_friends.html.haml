.heading-buttons
  %h3
    Add New Friends
    %span | according to User's ID
  .clearfix

.innerLR
  = form_for :client, :url => {:controller => "friends", :action => "new_friend", :method => "post" } do |f|

    .widget.widget-tabs
      .widget-body
        .tab-content
          #productDescriptionTab.tab-pane.active
            .row-fluid
              .span3
                %strong Enter ID
                %p.muted ID of the User
              .span9
                %label{:for => "inputTitle"} ID
                = f.text_field :client_id, class: "span6"  ,placeholder: "Enter ID ..."
                .separator
            %hr.separator.bottom/
            
            .row-fluid
              .span3
                %strong Enter mobile number
                %p.muted Send SMS to the user with the verification code.
              .span9
                %label{:for => "inputTitle"} Contact Number
                = f.text_field :contact_number, class: "span6"  ,placeholder: "Enter Contact Number ..."

            %br
      .heading-buttons
        .buttons.pull-right{:style => "margin: 0;"}
          = f.submit "Send Friend Requests", :class => "btn btn-primary btn-icon glyphicons ok_2"
%br
%br         
